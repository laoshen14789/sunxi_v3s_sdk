&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb_666_pins>;
	status = "okay";
};

&tcon0_out {
	tcon0_out_lcd: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&i2c0 {
    status = "okay";
	tsc2007@48 {
		compatible = "ti,tsc2007";
		reg = <0x48>;
		interrupt-parent = <&pio>;
		interrupts = <1 5 IRQ_TYPE_EDGE_FALLING>;
		gpios = <&pio 1 5 GPIO_ACTIVE_LOW>;
		pendown-gpio = <&pio 1 5 GPIO_ACTIVE_LOW>;
		ti,x-plate-ohms = <450>;
		wakeup-source;
	};
};

&lradc {
	status = "okay";
	compatible = "allwinner,sun8i-a83t-r-lradc";
	keyStart@0 {
		channel = <0>;
		voltage = <750000>; // 750 550 350 150
		linux,code = <KEY_1>;
	};
	keySel@1 {
		channel = <0>;
		voltage = <550000>; //550 350 150
		linux,code = <KEY_2>;
	};
	keyPlus@2 {
		channel = <0>;
		voltage = <350000>; //550 350 150
		linux,code = <KEY_3>;
	};
	keySub@3 {
		channel = <0>;
		voltage = <150000>; //550 350 150
		linux,code = <KEY_4>;
	};
};